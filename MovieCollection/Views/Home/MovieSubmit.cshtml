@{
    ViewBag.Title = "John Hilton Movie Application";
}

@model Movie

<h1>@ViewBag.Title</h1>

<br />
<form asp-action="MovieSubmit" method="POST">
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
        @*Displaying validation error when not entered correctly*@
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
        <span asp-validation-for="Director" class="text-danger"></span>
    </div>

    @*Dropdown menu for Rating field and Edited field*@

    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div>
        @Html.ValidationMessageFor(model => model.Edited, "", new { @class = "text-danger" })
        <label asp-for="Edited">Is the film edited?</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" />
    </div>
    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" />
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>
    <button class="btn-success round btn-sm" type="submit">Submit</button>
</form>
